   </transform>
   <transform type = "translate">
          <param name="translation" value="(274,201)" />
          <paste object = "blob"/>
   </transform>
   <style id = "linkcolor1.2" type="RGBAColor">
   <param name="color" value="000000" />
   <primitive type = "line">
      <param name="start" value="(75,75)" />
	  <param name="end" value="(400,100)" />
