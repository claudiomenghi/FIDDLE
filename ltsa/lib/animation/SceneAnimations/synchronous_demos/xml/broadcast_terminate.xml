<draw>
   <input type="mouseClick" id="click.node1">
	 <param name="pressedEvent" value="pressed"/>
	 <paste object="node1" /> 
   </input>
   <input type="mouseClick" id="click.node2">
	 <param name="pressedEvent" value="pressed"/>
	 <paste object="node2" /> 
   </input>
   <input type="mouseClick" id="click.node3">
