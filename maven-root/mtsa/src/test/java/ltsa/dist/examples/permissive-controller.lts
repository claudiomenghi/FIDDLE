set Controllable = {g,c}
set A = {Controllable, a}

M = (g->g->G | c->a->G),
G = (g->G).

fluent F_G = <g, A\{g}>
fluent F_A = <a, A\{a}>

assert Assumption = F_A
assert Guarantee = F_G

assert Permissive_Check = []<> F_G 

controller ||PERMISSIVE = M~{G}.
controller ||C = M~{G2}.

goal G = {
	permissive
	assume = {Assumption}
    guarantee = {Guarantee}
    controllable = {Controllable}
}

goal G2 = {
	assume = {Assumption}
    guarantee = {Guarantee}
    controllable = {Controllable}
}


